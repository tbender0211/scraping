{{#if scrape}}
    {{#each scrape}}
        <div class="row">
            <div class="col s12 m6" style="margin-left: 25%">
            <div class="card blue-grey darken-1" data-id="{{this._id}}">
                <div class="card-content white-text">
                <span class="card-title">{{this.title}}</span>
                <p>{{this.summary}}</p>
                {{#if this.comments}}
                    {{#each this.comments}}
                        <p>{{this.user}}</p>
                        <p>{{this.comment}}</p>
                    {{/each}}
                {{/if}}
                </div>
                <div class="card-action">
                <a href="{{this.link}}" target="_blank">Take a listen!</a>
                </div>
            </div>
            </div>
            <div class="row">
                <div class="col s12 m6" style="margin-left: 25%">
                    <div class="card blue-grey darken-1" data-id="{{this._id}}">
                        <div class="card-content white-text">
                            <span class="card-title">Add A Comment:</span>
                            <div class="row">
                                <div class="input-field col s6">
                                    <i class="material-icons prefix">account_circle</i>
                                    <input id="icon_prefix" type="text" class="username{{this._id}} validate">
                                    <label for="icon_prefix">Username</label>
                                </div>
                            </div>
                            <div class="row">
                                <form class="col s12">
                                    <div class="row">
                                        <div class="input-field col s12">
                                        <textarea id="commentText{{this._id}}" class="materialize-textarea"></textarea>
                                        <label for="textarea1">Textarea</label>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="card-action">
                            <a href="/comments/{{this._id}}" data-id="{{this._id}}" class="submit">Submit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{/if}}